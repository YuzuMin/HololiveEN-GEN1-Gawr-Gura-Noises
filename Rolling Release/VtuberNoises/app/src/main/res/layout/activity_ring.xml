<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:backgroundTint="#D2000000"
        android:backgroundTintMode="src_atop"
        android:background="@drawable/bg4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="100dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wake Up"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/porcelain"
            android:textSize="45dp" />

        <ImageView
            android:padding="60dp"
            android:layout_weight="1"
            android:id="@+id/activity_ring_clock"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/gura0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/button"
                android:layout_weight="1"
                android:id="@+id/activity_ring_dismiss"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Dismiss" >
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/porcelain"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="Dismiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/button"
                android:layout_weight="1"
                android:id="@+id/activity_ring_snooze"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/porcelain"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="Snooze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>